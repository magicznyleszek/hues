{
  "name": "hues",
  "private": true,
  "description": "A tool for working with colors",
  "repository": {
    "type": "git",
    "url": "https://github.com/magicznyleszek/hues.git"
  },
  "author": "Leszek Pietrzak",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/magicznyleszek/hues/issues",
    "email": "leszek@magicznyleszek.xyz"
  },
  "homepage": "https://hues.magicznyleszek.xyz",
  "scripts": {
    "build": "npm-run-all test dist:rebuild svg:build styles:build scripts:build scripts:copydeps",
    "watch": "npm-watch",
    "serve": "npm-run-all build jekyll:serve",
    "test": "npm-run-all scripts:test",
    "dist:rebuild": "rm -rf dist && mkdir dist && cd dist && mkdir npmdeps",
    "styles:build": "postcss src/app.css -o dist/monolith.css",
    "scripts:build": "babel src --out-dir dist",
    "scripts:copydeps": "npm-run-all copy:require copy:react copy:reactDom copy:alt copy:requireConfig",
    "scripts:test": "karma start .karma.config.js",
    "copy:alt": "cp node_modules/alt/dist/alt.js dist/npmdeps/alt.js",
    "copy:react": "cp node_modules/react/dist/react.js dist/npmdeps/react.js",
    "copy:reactDom": "cp node_modules/react-dom/dist/react-dom.js dist/npmdeps/react-dom.js",
    "copy:require": "cp node_modules/requirejs/require.js dist/npmdeps/require.js",
    "copy:requireConfig": "cp src/requireConfig.js dist/requireConfig.js",
    "svg:build": "svgo -f src/symbols/ && svgshelf -p symbol- src/symbols/\\*.svg _includes/symbols.svg",
    "jekyll:build": "jekyll build",
    "jekyll:serve": "jekyll serve --watch --baseurl ''"
  },
  "watch": {
    "styles:build": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "quiet": false
    },
    "scripts:build": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": false
    },
    "scripts:test": {
      "patterns": [
        "test"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-plugin-transform-es2015-modules-amd": "^6.24.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.17.1",
    "istanbul-reporter-shield-badge": "^1.1.3",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.5.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-requirejs": "^1.1.0",
    "karma-spec-reporter": "0.0.30",
    "npm-run-all": "^4.0.2",
    "npm-watch": "^0.1.8",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0-beta",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.1.0",
    "svgo": "^0.7.2",
    "svgshelf": "^1.0.3"
  },
  "dependencies": {
    "alt": "^0.18.6",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "requirejs": "^2.3.3"
  }
}
