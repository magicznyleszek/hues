{
  "name": "hues",
  "private": true,
  "description": "A tool for working with colors",
  "repository": {
    "type": "git",
    "url": "https://github.com/smutnyleszek/hues.git"
  },
  "keywords": [
    "color",
    "design",
    "webdesign",
    "css"
  ],
  "author": "Leszek Pietrzak",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/smutnyleszek/hues/issues",
    "email": "smutnyleszek@gmail.com"
  },
  "homepage": "https://hues.smutnyleszek.com",
  "devDependencies": {
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "color-convert": "^1.0.0",
    "cssnext": "^1.8.4",
    "jasmine": "^2.4.1",
    "svgo": "^0.6.1",
    "svgshelf": "^1.0.3",
    "uglifyify": "^3.0.1",
    "watch": "^0.17.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "scripts": {
    "start": "npm install && npm run clear && npm run build && npm run test",
    "clear": "rm -rf public && mkdir public && mkdir public/styles && mkdir public/scripts",
    "build": "npm run build:js && npm run build:css && npm run build:svg && build:jekyll",
    "build:css": "cssnext -c _assets/styles/main.css > public/styles/main.css",
    "watch:css": "watch 'npm run build:css' _assets/styles",
    "build:js": "browserify -t babelify -g uglifyify -e _assets/scripts/app/app.js > public/scripts/monolith.js",
    "watch:js": "watch 'npm run build:js' _assets/scripts/app",
    "build:svg": "svgo -f _assets/symbols/ && svgshelf -p symbol- _assets/symbols/\\*.svg _includes/symbols.svg",
    "test": "jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "watch:test": "watch 'npm run test' _assets/scripts/tests",
    "watch": "npm-watch",
    "build:jekyll": "jekyll build",
    "serve:jekyll": "jekyll serve --watch --baseurl ''"
  }
}
