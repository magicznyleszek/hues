{
  "name": "hues",
  "private": true,
  "description": "A tool for working with colors",
  "repository": {
    "type": "git",
    "url": "https://github.com/smutnyleszek/hues.git"
  },
  "author": "Leszek Pietrzak",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/smutnyleszek/hues/issues",
    "email": "smutnyleszek@gmail.com"
  },
  "homepage": "https://hues.smutnyleszek.com",
  "scripts": {
    "build": "npm-run-all clean build:svg build:styles copy:npmdeps build:scripts",
    "watch": "npm-watch",
    "clean": "rm -rf dist && mkdir dist && mkdir dist/styles && mkdir dist/scripts && mkdir dist/scripts/npmdeps",
    "build:styles": "postcss -u postcss-import -u postcss-cssnext -o dist/styles/monolith.css src/styles/main.css",
    "copy:npmdeps": "cp node_modules/requirejs/require.js dist/scripts/npmdeps/require.js",
    "build:scripts": "babel src/scripts --out-dir dist/scripts",
    "build:svg": "svgo -f src/symbols/ && svgshelf -p symbol- src/symbols/\\*.svg _includes/symbols.svg",
    "build:jekyll": "jekyll build",
    "serve:jekyll": "jekyll serve --watch --baseurl ''"
  },
  "watch": {
    "build:styles": {
      "patterns": [
        "src/styles"
      ],
      "quiet": false
    },
    "build:scripts": {
      "patterns": [
        "src/scripts"
      ],
      "quiet": false
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-es2015-modules-amd": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "npm-run-all": "^2.3.0",
    "npm-watch": "^0.1.5",
    "postcss": "^5.0.19",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "svgo": "^0.6.1",
    "svgshelf": "^1.0.3"
  },
  "dependencies": {
    "requirejs": "^2.3.1"
  }
}
