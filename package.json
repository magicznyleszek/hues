{
  "name": "hues",
  "version": "2.0.0",
  "private": true,
  "description": "A tool for naming and converting colors in CSS development",
  "author": {
    "name": "Leszek Pietrzak",
    "email": "leszek@magicznyleszek.xyz"
  },
  "homepage": "https://hues.dev",
  "repository": "https://github.com/magicznyleszek/hues.git",
  "bugs": "https://github.com/magicznyleszek/hues/issues",
  "license": "EUPL-1.2",
  "browserslist": [
    "defaults and fully supports es6-module",
    "maintained node versions",
    "last 5 major versions",
    "not dead"
  ],
  "type": "module",
  "app": "public/index.html",
  "targets": {
    "app": {
      "source": [
        "source/index.html"
      ],
      "publicUrl": "./",
      "distDir": "public",
      "sourceMap": true,
      "includeNodeModules": true
    }
  },
  "scripts": {
    "assets:watch": "parcel watch",
    "assets:build": "parcel build",
    "test": "jest && npm run test-syntax",
    "test-watch": "jest --watchAll",
    "start": "parcel serve --port 2038",
    "build-app": "rm -rf public && parcel build source/index.html --out-dir public --public-url ./ --no-cache && npm run copy-static-files",
    "copy-static-files": "cp humans.txt LICENSE manifest.json robots.txt sitemap.xml source/favicons/hues-logo.svg public"
  },
  "devDependencies": {
    "@parcel/transformer-postcss": "^2.15.2",
    "@parcel/transformer-vue": "^2.15.2",
    "@types/jest": "^29.5.14",
    "jest": "^30.0.0",
    "parcel": "^2.15.2",
    "postcss": "^8.5.5",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.2.3",
    "stylelint": "^16.20.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vue-hot-reload-api": "^2.3.4"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.16"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/file-mock.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
