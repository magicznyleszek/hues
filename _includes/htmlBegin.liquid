<!DOCTYPE html>
<html lang="{{ site.data.globals.appLang }}">

<head>
    <!-- stuff -->
    <meta charset="utf-8">
    <meta http-equiv="cleartype" content="on">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <!-- info -->
    <title>{{ site.name }}</title>
    <meta name="keywords" content="{{ site.keywords }}">
    <meta name="description" content="{{ site.description }}">
    <meta name="author" content="{{ site.author }}">
    <link rel="author" href="humans.txt">
    <link rel="home" href="{{ site.baseurl }}">

    <!-- open graph -->
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:title" content="{{ site.name }}">
    <meta property="og:description" content="{{ site.description }}">
    <meta property="og:url" content="{{ site.baseurl }}{{ page.url }}">
    <meta property="og:image" content="/dist/images/hues-logo-200.png">

    <!-- style & viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/dist/styles/monolith.css?v1" media="all" rel="stylesheet">

    <!-- icons -->
    <link rel="icon" href="/favicon.ico?v1">
    <link rel="apple-touch-icon" href="/dist/images/hues-logo-1440.png?v1">
</head>

<body>
    <div style="display: none;">
        {% include symbols.svg %}
    </div>
